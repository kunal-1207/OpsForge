{
  "dashboard": {
    "id": null,
    "title": "Production-Grade DevOps Platform Dashboard",
    "tags": ["devops", "microservices", "api", "worker"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 1,
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(kube_namespace_created, namespace)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "API Service Health",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(up{job=\"api-service\"})",
            "legendFormat": "Healthy API Pods"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        }
      },
      {
        "id": 2,
        "title": "Worker Service Health",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(up{job=\"worker-service\"})",
            "legendFormat": "Healthy Worker Pods"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        }
      },
      {
        "id": 3,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[1m])) by (job)",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "show": true
          }
        ],
        "xAxis": {
          "show": true
        },
        "yAxis": {
          "show": true
        }
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[1m])) by (job)",
            "legendFormat": "{{job}} Errors",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "show": true
          }
        ],
        "xAxis": {
          "show": true
        },
        "yAxis": {
          "show": true
        }
      },
      {
        "id": 5,
        "title": "Request Latency (95th Percentile)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, job))",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "show": true
          }
        ],
        "xAxis": {
          "show": true
        },
        "yAxis": {
          "show": true
        }
      },
      {
        "id": 6,
        "title": "Job Processing Metrics",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "sum(rate(jobs_processed_total[1m])) by (status, job_type)",
            "legendFormat": "{{status}} - {{job_type}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Jobs/sec",
            "show": true
          }
        ],
        "xAxis": {
          "show": true
        },
        "yAxis": {
          "show": true
        }
      },
      {
        "id": 7,
        "title": "Job Queue Size",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "job_queue_size",
            "legendFormat": "Queue Size",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Jobs",
            "show": true
          }
        ],
        "xAxis": {
          "show": true
        },
        "yAxis": {
          "show": true
        }
      },
      {
        "id": 8,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{name=~\"api-service|worker-service\"}[1m])) by (name)",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "CPU Cores",
            "show": true
          }
        ],
        "xAxis": {
          "show": true
        },
        "yAxis": {
          "show": true
        }
      }
    ],
    "links": [],
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    }
  }
}